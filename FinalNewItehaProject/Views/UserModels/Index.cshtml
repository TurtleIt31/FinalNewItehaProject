@model IEnumerable<FinalNewItehaProject.Models.UserModel>

<div class="container mt-5" style="background-color: #f4f4f4; padding: 20px; border-radius: 8px;">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-sm" style="background-color: #e0e0e0;">
                <div class="card-body">
                    <h1 class="mb-4 text-center">@ViewData["Title"]</h1>

                    <p class="text-end">
                        <a asp-action="Create" class="btn btn-success">Create New</a>
                    </p>

                    <table class="table table-hover table-striped table-bordered">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.UserName)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.Password)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.UserType)
                                </th>
                                <th scope="col" class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Password)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserType)
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-warning btn-sm">Edit</a>
                                        <a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-info btn-sm">Details</a>
                                        <a asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-danger btn-sm">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
