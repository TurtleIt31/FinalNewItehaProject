@model ITEHA_Project.Models.ProductsModel

<div class="container mt-5" style="background-color: #f4f4f4; padding: 20px; border-radius: 8px;">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm" style="background-color: #e0e0e0;">
                <div class="card-body">
                    <h1 class="text-center mb-4 text-danger"><i class="bi bi-exclamation-circle-fill"></i> Delete</h1>

                    <h3 class="text-center mb-4">Are you sure you want to delete this?</h3>

                    <h4 class="text-primary">Product Details</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3 text-dark">
                            @Html.DisplayNameFor(model => model.ProductName)
                        </dt>
                        <dd class="col-sm-9 text-secondary">
                            @Html.DisplayFor(model => model.ProductName)
                        </dd>
                        <dt class="col-sm-3 text-dark">
                            @Html.DisplayNameFor(model => model.ProductDescription)
                        </dt>
                        <dd class="col-sm-9 text-secondary">
                            @Html.DisplayFor(model => model.ProductDescription)
                        </dd>
                        <dt class="col-sm-3 text-dark">
                            @Html.DisplayNameFor(model => model.NumberOfProducts)
                        </dt>
                        <dd class="col-sm-9 text-secondary">
                            @Html.DisplayFor(model => model.NumberOfProducts)
                        </dd>
                        <dt class="col-sm-3 text-dark">
                            @Html.DisplayNameFor(model => model.ProductImage)
                        </dt>
                        <dd class="col-sm-9 text-secondary">
                            @Html.DisplayFor(model => model.ProductImage)
                        </dd>
                        <dt class="col-sm-3 text-dark">
                            @Html.DisplayNameFor(model => model.ProductPrice)
                        </dt>
                        <dd class="col-sm-9 text-secondary">
                            @Html.DisplayFor(model => model.ProductPrice)
                        </dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="ProductId" />
                        <div class="text-center">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
