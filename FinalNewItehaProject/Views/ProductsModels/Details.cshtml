@model ITEHA_Project.Models.ProductsModel

<div class="container mt-5" style="background-color: #f4f4f4; padding: 20px; border-radius: 8px;">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm" style="background-color: #e0e0e0;">
                <div class="card-body">
                    <h1 class="text-center mb-4 text-primary">Product Details</h1>

                    <h4 class="text-primary">Details</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3 text-dark">
                            @Html.DisplayNameFor(model => model.ProductName)
                        </dt>
                        <dd class="col-sm-9 text-secondary">
                            @Html.DisplayFor(model => model.ProductName)
                        </dd>
                        <dt class="col-sm-3 text-dark">
                            @Html.DisplayNameFor(model => model.ProductDescription)
                        </dt>
                        <dd class="col-sm-9 text-secondary">
                            @Html.DisplayFor(model => model.ProductDescription)
                        </dd>
                        <dt class="col-sm-3 text-dark">
                            @Html.DisplayNameFor(model => model.NumberOfProducts)
                        </dt>
                        <dd class="col-sm-9 text-secondary">
                            @Html.DisplayFor(model => model.NumberOfProducts)
                        </dd>
                        <dt class="col-sm-3 text-dark">
                            @Html.DisplayNameFor(model => model.ProductImage)
                        </dt>
                        <dd class="col-sm-9 text-secondary">
                            @Html.DisplayFor(model => model.ProductImage)
                        </dd>
                        <dt class="col-sm-3 text-dark">
                            @Html.DisplayNameFor(model => model.ProductPrice)
                        </dt>
                        <dd class="col-sm-9 text-secondary">
                            @Html.DisplayFor(model => model.ProductPrice)
                        </dd>
                    </dl>

                    <div class="text-center mt-4">
                        <a asp-action="Edit" asp-route-id="@Model?.ProductId" class="btn btn-warning">Edit</a>
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
