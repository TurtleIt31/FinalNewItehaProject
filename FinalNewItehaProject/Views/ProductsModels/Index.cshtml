@model IEnumerable<ITEHA_Project.Models.ProductsModel>

<div class="container mt-5" style="background-color: #f4f4f4; padding: 20px; border-radius: 8px;">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card shadow-sm" style="background-color: #e0e0e0;">
                <div class="card-body">
                    <h1 class="text-center mb-4 text-primary">Products</h1>

                    <p class="text-end">
                        <a asp-action="Create" class="btn btn-success">Create New</a>
                    </p>

                    <table class="table table-hover table-striped table-bordered">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.ProductName)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.ProductDescription)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.NumberOfProducts)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.ProductImage)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.ProductPrice)
                                </th>
                                <th scope="col" class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ProductName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ProductDescription)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NumberOfProducts)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ProductImage)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ProductPrice)
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-warning btn-sm">Edit</a>
                                        <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-info btn-sm">Details</a>
                                        <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-danger btn-sm">Delete</a>
                                        <form asp-action="AddToCart" asp-controller="ShoppingCartProductModels" method="post" style="display:inline;">
                                            <input type="hidden" name="productId" value="@item.ProductId" />
                                            <button type="submit" class="btn btn-primary btn-sm">Add to Cart</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
